.PHONY: lib4e
lib4e:
	cd lib4e;\
	zip -r ../builds/lib4e.zip *;\
	mv ../builds/lib4e.zip ../builds/lib4e.rptok;\
	cd ..;\

.PHONY: burst
burst:
	cd burst;\
	zip -r ../builds/burst.zip *;\
	mv ../builds/burst.zip ../builds/burst.rptok;\
	cd ..;\

.PHONY: macros
macros:
	cd macros;\
	zip -r ../builds/macros.zip *;\
	mv ../builds/macros.zip ../builds/macros.rptok;\
	cd ..;\

.PHONY: npc
npc:
	cd npc;\
	zip -r ../builds/npc.zip *;\
	mv ../builds/npc.zip ../builds/npc.rptok;\
	cd ..;\

.PHONY: pc
pc:
	cd pc;\
	zip -r ../builds/pc.zip *;\
	mv ../builds/pc.zip ../builds/pc.rptok;\
	cd ..;\

.PHONY: properties
properties:
	cd properties;\
	zip -r ../builds/properties.zip *;\
	mv ../builds/properties.zip ../builds/properties.rptok;\
	cd ..;\

all: lib4e burst macros npc pc properties
